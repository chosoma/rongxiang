<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <bean name="buttonBorder" class="javax.swing.plaf.BorderUIResource$CompoundBorderUIResource">
        <constructor-arg index="0" ref="buttonborder1"/>
        <constructor-arg index="1" ref="buttonborder2"/>
    </bean>

    <bean name="buttonborder1" class="com.thingtek.view.component.border.ButtonBorder"/>
    <bean name="buttonborder2" class="javax.swing.plaf.basic.BasicBorders$MarginBorder"/>



</beans>